uris = ldap://{{ ldap_hostname | default(ansible_fqdn) }}
#dn = cn=mailAccountReader,ou=Manager,dc=example,dc=com
#dnpass = <dn bind password>
tls = yes
#tls_ca_cert_file = /etc/ldap/tls/CA.pem
tls_require_cert = hard
debug_level = 0
auth_bind = yes
auth_bind_userdn = uid=%u,ou={{ users_ou }},{{ domain | hostname_to_dn }}
ldap_version = 3
base = ou={{ users_ou }},{{ domain | hostname_to_dn }}
scope = subtree
user_attrs = homeDirectory=home,uidNumber=uid,gidNumber=gid
user_filter = (&(objectClass=posixAccount)(uid=%u))
